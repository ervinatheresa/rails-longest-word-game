<h1> New Game </h1>

<% @letters.each do |letter| %>
  <div class = boxes> <%= letter %> </div>
<% end %>


<form action=<%= score_path %> method="post" class=question>
  <input type="text" name="word" placeholder="What is the longest word you can find?" class=longer>
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter_options, @letters %>
</form>
